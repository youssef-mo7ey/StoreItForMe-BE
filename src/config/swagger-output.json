        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "example": {
                "name": "John",
                "lastName": "Doe",
                "phone": "+1234567890",
                "email": "john.doe@example.com",
                "password": "yourSecurePassword",
                "agreedTerms": true,
                "marketingConsent": false,
                "role": "STUDENT",
